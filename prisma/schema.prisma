generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String
  saves    Saves[]
  books    Book[]  @relation("BookToUser")

  @@map("users")
}

model Book {
  id            String @id @default(uuid())
  name          String
  quantityPages Int
  author        String
  url           String
  reader        User[] @relation("BookToUser")

  @@map("books")
}

model Saves {
  id       String @id @default(uuid())
  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  @@map("saves")
}
